@model IEnumerable<FIT_AISAMA.Models.ActiveSpecificationType.ActiveSpecificationTypeModel>


<div class="row">
    <div class="form-group col-sm-9">
        @if (Model.Any())
            {
                <div class="simple-border">

                    <div class="col-sm-12 text-center text-info">
                        <h4>Характеристики</h4>
                    </div>
                    @foreach (var item in Model)
                    {
                    <div class="row">
                        <div class="col-sm-12" style="padding-bottom: 5px;">
                            <label class="col-sm-6 control-label" style="overflow: hidden;" title="@item.TypeName">@item.TypeName @item.ShortMeasureType</label>
                            <div class="col-sm-6 specificationBlock">
                                <input type="hidden" name="specificationType[]" value="@item.Id"/>
                                <input type="text" name="specificationValue[]" class="form-control"/>
                            </div>
                        </div>
                    </div>
                    }
            
                </div>
            }
        else
        {
            <h4 class="text-warning">Для типа не назначены характеристики</h4>
        }
    </div>
</div>
