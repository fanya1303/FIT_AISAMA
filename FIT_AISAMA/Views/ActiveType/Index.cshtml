@model IEnumerable<FIT_AISAMA.Models.ActiveType.ActiveTypeModel>

@{
    ViewBag.Title = "Index";
}

<div class="col-sm-12">
    <h2>Список типов МЦ </h2>
</div>

<div class="col-sm-7">
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TypeCode)
        </th>
        <th style="width: 280px;">
            @Html.DisplayNameFor(model => model.TypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model=> model.BaseAmmortizationMounth)
        </th>
        <th style="width: 100px;"></th>
    </tr>
    
    <tr>
        <td>
            <a href="/ActiveType/CreateActiveType" title="Добавить новый тип">
                <div style="height: 21px;">
                    <span class="glyphicon glyphicon-plus create-icon"></span>
                </div>
            </a>
        </td>
        <td>
            <a href="/ActiveType/CreateActiveType" title="Добавить новый тип">
                <div style="height: 21px;"></div>
            </a>
        </td>
        <td>
            <a href="/ActiveType/CreateActiveType" title="Добавить новый тип">
                <div style="height: 21px;"></div>
            </a>
        </td>
        <td>
            <a href="/ActiveType/CreateActiveType" title="Добавить новый тип">
                <div style="height: 21px;"></div>
            </a>
        </td>
    </tr>
    

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeName)
            </td>
            <td>
                @if (item.BaseAmmortizationMounth.HasValue)
                {
                    @Html.DisplayFor(modelItem => item.BaseAmmortizationMounth.Value)
                }
                else
                {
                    <span style="color:gray">не указан</span>
                }
            </td>
            <td class="text-center">
                <div class="col-sm-12" >
                @Html.ActionLink("Детали", "ActiveTypeDetails", new {id = item.Id})
                </div>
            </td>
        </tr>
    }

</table>
</div>
