<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css", "~/Content/bootstrap.min.css", "~/Content/General.css", "~/Content/bootstrap-select.min.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap-select.min.js")
    
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">FIT_AISAMA</a>
    </div>
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Регистрация МЦ", "Index", "Person")</li>
        <li>@Html.ActionLink("Список МЦ", "Index", "Person")</li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Справочники
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li class="active">@Html.ActionLink("Сотрудники", "Index", "Person")</li>
          <li>@Html.ActionLink("Типы МЦ", "Index", "Person")</li>
          <li>@Html.ActionLink("Характеристики МЦ", "Index", "Person")</li>
        </ul>
      </li>
    </ul>
  </div>
</nav>
@RenderBody()

@Scripts.Render("~/bundles/jquery")
@RenderSection("scripts", required: false)
</body>
</html>
