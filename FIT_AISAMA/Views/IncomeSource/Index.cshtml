@model IEnumerable<FIT_AISAMA.Models.IncomeSource.IncomeSourceModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    
</p>
<div class="col-sm-4">
<table class="table table-striped table-bordered">
    
    <tr>
        <th style="width: 250px;">
           
            @Html.DisplayNameFor(model => model.Source)
        </th>
        <th></th>
    </tr>
    <tr>
    <td>
            <a href="/IncomeSource/CreateIncomeSource" title="Добавить новый тип">
                <div style="height: 21px;">
                    <span class="glyphicon glyphicon-plus create-icon"></span>
                </div>
            </a>
        </td>
    <td>
        <a href="/IncomeSource/CreateIncomeSource" title="Добавить новый тип">
            <div style="height: 21px;"></div>
        </a>
    </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
             <td class="text-center">
                 <div class="col-sm-6" style="padding: 0;">
                     @Html.ActionLink("Детали", "SourceDetails", new {id = item.Id})
                 </div>
                  <div class="col-sm-6" style="padding: 0;">
                        @using (Html.BeginForm("DeleteIncomeSource", "IncomeSource", FormMethod.Post))
                        {
                            <input type="hidden" name="Id" value="@item.Id"/>
                            <input class="btn btn-danger btn-xs" type="submit" value="Удалить"/>
                        }
                    </div>
            </td>
        </tr>
    }

</table>
</div>
