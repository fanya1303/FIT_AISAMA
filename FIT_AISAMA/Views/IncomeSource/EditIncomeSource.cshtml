@model FIT_AISAMA.Models.IncomeSource.IncomeSourceModel

@{
    ViewBag.Title = "Источник";
}

<div class="col-sm-12">
    <h2>@(Model.Id == 0 ?"Создание типа поступления" : "Редактирование типа поступления")</h2>
</div>
<div class="col-sm-3">
@using (Html.BeginForm("SaveIncomeSource", "IncomeSource", FormMethod.Post, new { role = "form", @class = "form-group"}))
{
    @Html.ValidationSummary(true)       
        <div class="form-group">
            @Html.LabelFor(model => model.Source)
            @Html.TextBoxFor(model => model.Source, new{@class="form-control", placeholder="Название источника"})
            @Html.ValidationMessageFor(model => model.Source)
        </div>
        @Html.HiddenFor(model=> model.Id)
        <p>            
            <input class="btn btn-success" type="submit" value="Сохранить" />
        </p>
   
    
}
</div>
<div class="col-sm-12">
    @Html.ActionLink("Вернуться к списку", "Index")
</div>


