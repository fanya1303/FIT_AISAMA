@model FIT_AISAMA.Models.Person.EditPersonModel

@{
    ViewBag.Title = "EditPerson";
}
<div class="col-sm-12">
    <h4>Редактирование данных</h4>
</div>
<div class="col-sm-4">
@using (Html.BeginForm("EditPerson", "Person", FormMethod.Post, new { role = "form", @class = "form-group" }))
{
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.Id)

    if (!Model.CanDelete && !Model.IsDeleted)
    {
        <div class="alert alert-warning">@Model.CanDeleteMessage</div>
    }
    else
    {
          <div class="checkbox">
                <label style="font-weight: normal;">
                    @Html.CheckBoxFor(moedel => Model.IsDeleted)
                    Неактивная запись
                </label>
            </div>
    }
    
    
    


    <div class="form-group">
            @Html.LabelFor(model => model.FullName)
            @Html.TextBoxFor(model => model.FullName, new { @class = "form-control capitalizeText", placeholder = "ФИО" })
            @Html.ValidationMessageFor(model => model.FullName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Position)
            @Html.TextBoxFor(model => model.Position, new { @class = "form-control", placeholder = "Должность" })
            @Html.ValidationMessageFor(model => model.Position)
        </div>
    <p>
        <input type="submit" class="btn btn-success" value="Сохранить"  />
    </p>
    

}
</div>
<div class="col-sm-12">
    @Html.ActionLink("Вернуться к списку", "Index")
</div>
<script type="text/javascript">
    $(document)
        .ready(function () {
            $(".capitalizeText")
                .keyup(function () {
                    $(this).val(commonFunctionHelper.capitalizeText($(this).val()));
                });
        });
</script>

