@model IEnumerable<FIT_AISAMA.Models.Person.PersonTableViewModel>

<table class="table table-striped table-bordered">
        <tr>
            <th style="width: 350px;">
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th style="width: 120px;"></th>
        </tr>
        
        
        <tr>
            <td>
                <a href="/Person/CreatePerson" title="Добавить нового сотрудника">
                <div style="height: 21px; width: 100%;">
                    <span  class="glyphicon glyphicon-plus create-icon"></span>
                </div>
                </a>
            </td>
            <td>
                <a href="/Person/CreatePerson" title="Добавить нового сотрудника">
                    <div style="height: 21px;"></div>
                </a>
            </td>
            <td>
                <a href="/Person/CreatePerson" title="Добавить нового сотрудника" style="display: block; height: 100%; width: 100%;">
                    <div style="height: 21px;"></div>
                </a>
            </td>
        </tr>
        

        @foreach (var item in Model)
        {
            <tr class="@(item.IsDeleted ? "deleted-item": "")">
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                    @if (item.ResponsiblePerson.HasValue && item.ResponsiblePerson.Value)
                    {
                        <span title="Сотрудник назначен материально ответственным" class="glyphicon glyphicon-list-alt responsible-person"></span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td class="text-center">
                    <div class="col-sm-12" style="padding: 0;">
                        @Html.ActionLink("Подробно", "PersonDetails", new { id = item.Id })
                    </div>
                    
                </td>
            </tr>
        }
    </table>
