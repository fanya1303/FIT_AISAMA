@model IEnumerable<FIT_AISAMA.Models.Person.PersonViewModel>

@{
    ViewBag.Title = "Index";
}
<div class="col-sm-12">
    <h2>Список сотрудников</h2>
</div>
<div class="col-sm-12">
    @Html.ActionLink("Добавить нового пользователя", "CreatePerson")
</div>
<div class="col-sm-6">
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td class="text-center">
                @Html.ActionLink("Детали", "PersonDetails", new {id = item.Id}) |
                @Html.ActionLink("Удалить", "DeletePerson", new {id = item.Id})
            </td>
        </tr>
    }
    </table>
</div>
        



